<!DOCTYPE html>
<!--[if IE 8]> 				 <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js" lang="en">
<!--<![endif]-->

<head>
    <meta charset="utf-8" />

    @*Set the viewport width to device width for mobile *@
    <meta name="viewport" content="width=device-width" />

    <title>@(ViewBag.Title != null ? ViewBag.Title + " - upboat.me" : "upboat.me")</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    @Styles.Render("~/Content/foundation/css")
    @Styles.Render("~/Content/styles.css")
    @RenderSection("head", required: false)
</head>
<body>
    <div id="header" class="row">
        <div class="large-12 columns">
            <h1>@Html.ActionLink("UPBOAT.ME", "Index", "Home") <div style="float:right"><small>&#8220;<small>@UpboatMe.Utilities.SloganUtilities.GetRandomSlogan()</small>&#8221;</small></div></h1>
        </div>
    </div>
    @RenderBody()
    <div id="footer" class="row">
        <hr/>
        <div class="large-4 columns">
            <ul>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Pricing", "Pricing", "Home")</li>
                <li><a href="https://github.com/worldwidewat/upboat.me">Source</a></li>
            </ul>
        </div>
        <div class="large-4 columns">
            <ul>
                <li><a href="http://twitter.com/upboatme">@@upboatme</a></li>
                <li><a href="http://twitter.com/mharen">@@mharen</a></li>
                <li><a href="http://twitter.com/pwninstein">@@pwninstein</a></li>
            </ul>
        </div>
        <div class="large-4 columns">
            <ul>
                <li>@Html.ActionLink("Terms", "Terms", "Home")</li>
                <li>@Html.ActionLink("Privacy", "Privacy", "Home")</li>
                <li><a rel="license" href="http://creativecommons.org/licenses/by-nc/3.0/deed.en_US"><img alt="Creative Commons License" src="http://i.creativecommons.org/l/by-nc/3.0/80x15.png" /></a></li>
            </ul>
        </div>
    </div>

    @* Zepto polyfill: If you need to support Internet Explorer, you can fall back on jQuery. http://zeptojs.com/ *@
    <script>
        document.write('<script src=' +
            ('__proto__' in {} ? '@Url.Content("~/scripts/zepto.js")' : '@Url.Content("~/scripts/jquery.js")') +
      '><\/script>')
    </script>

    @Scripts.Render("~/bundles/foundation")
    @Scripts.Render("~/bundles/site")
    @*Use the Scripts section to define page specific scripts*@
    @RenderSection("scripts", required: false)
</body>
</html>