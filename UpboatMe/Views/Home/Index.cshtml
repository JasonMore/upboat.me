@model UpboatMe.Models.IndexViewModel
<div class="row">
    <div class="large-12 columns">
        <h2>how does this work?</h2>
        <div class="row">
            <div class="large-4 columns">
                <h4>Think of something funny<br />
                    <small>(the hard part)</small></h4>
            </div>
            <div class="large-4 columns">
                <h4>Make a meme wherever you are<br />
                    <small>(just build it with the url)</small></h4>
            </div>
            <div class="large-4 columns">
                <h4>Don't switch apps<br />
                    <small>(you're already done!)</small></h4>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="large-12 columns">
        <h2>Helper</h2>
        <div class="row">
            <div class="large-6 columns">

                <p>
                    @Html.DropDownList("meme-name", new SelectList(Model.Memes.Select(m => new { Value = m.Aliases.First(), Text = m.Description }), "Value", "Text"))
                </p>

                <p>
                    <input type="text" id="first-line" />
                </p>

                <p>
                    <input type="text" id="second-line" />
                </p>

                <input type="button" value="Create!" class="small button" id="create-meme" />
            </div>
            <div class="large-6 columns">

                <div>
                    <img id="meme-preview" />
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="large-12 columns">
        <h2>Recent Memes</h2>
    </div>
    <div class="large-3 columns">
        <img src="/sap/wears-suit-and-tie-to-interview/phone-interview" alt="socially awkward penguin: wears suit and tie to interview @Environment.NewLine phone interview" title="socially awkward penguin"/>
    </div>
    <div class="large-3 columns">
        <img src="/fry/not-sure-if-sunny-outside/or-hungover" alt="futurama fry: not sure if sunny outside @Environment.NewLine or hungover" title="futurama fry"/>
    </div>
    <div class="large-3 columns">
        <img src="/scc/i-don't-buy-things-with-money/i-buy-them-with-hours-of-my-life" alt="sudden clarity clarence: i don't buy things with money @Environment.NewLine i buy them with hours of my life" title="sudden clarity clarence"/>
    </div>
    <div class="large-3 columns">
        <img src="/blb/has-pet-rock/it-runs-away" alt="bad luck brian: has pet rock @Environment.NewLine it runs away" title="bad luck brian"/>
    </div>
</div>
